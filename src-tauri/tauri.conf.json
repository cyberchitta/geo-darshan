{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "geo-darshan",
  "version": "0.1.0",
  "identifier": "cc.cyberchitta.geo-darshan",
  "build": {
    "frontendDist": "../frontend",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Geo-Darshan",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities for Geo-Darshan file access",
          "windows": ["main"],
          "permissions": [
            "core:default",
            {
              "identifier": "fs:allow-read",
              "allow": [{ "path": "$APP/data/*" }]
            },
            {
              "identifier": "fs:allow-write",
              "allow": [{ "path": "$APP/data/*" }]
            }
          ],
          "platforms": ["macOS", "windows", "linux"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
